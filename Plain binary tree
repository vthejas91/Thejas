package binarytree;
import java.util.*;
/**
 *
 * @author tviswan1
 */
public class BinaryTree {
    
    public static Node root = null ;
   
    Stack st = new Stack();
    Queue queue = new LinkedList();
    public void insert(int val)
    {
            Node x = new Node();
            x.value = val;
        
        
        if(root == null)
        {
            root = new Node();
           root.value = val;
          // break; 
        }
        else if(root.left==null)
        {
                   root.left = x;
            queue.add(root.left);
            //break;
            
            
        }
        else if(root.right==null)    
        {
            root.right = x;
            queue.add(root.right);
           // break;
            
        }
            else
        {
            Node y = (Node)queue.peek();
            if(y.left==null)
            {
                y.left = x;
                queue.add(y.left);
            } 
            else if(y.right == null)
            {
                y.right = x ; 
                queue.add(y.right);
                queue.remove();
            }
            
            
        }
        
        
    }
    
    public void inorderdisplay(Node root)
    {
        if(root==null)
        {
            return ;
        }
        else
            
        {
            inorderdisplay(root.left);
            System.out.println(root.value);
            inorderdisplay(root.right);
        }
    }
    
    
    public static void main(String[] args) {
        // TODO code application logic here
   //     Node root = null;
        
        BinaryTree bt = new BinaryTree();
        bt.insert(10);
        bt.insert(20);
        bt.insert(5);
        bt.insert(7);
        bt.insert(23);
        bt.insert(56);
        bt.insert(3);
        
        bt.inorderdisplay(root);
        System.out.println("bt a "+bt.a);
        bt.a ++;
        System.out.println("bt "+bt.a);
    }
    
}
